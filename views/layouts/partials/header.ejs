<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">

<% if (locals.accountData) { %>
    <!-- Client logged in -->

    <div class="logged-user">
        <a class="welcome-message" href="/account">Welcome, <%= accountData.account_firstname %></a>

    <!-- Logout link -->
        <a class="management-link" title="Click to log in" href="/account/logout">Log out</a>
    </div>

        

<% } else { %>
<!-- Client not logged in -->

    <!-- My Account link -->
    <a class="management-link" title="Click to log in" href="/account/login">My Account</a>

<% } %>




    </div>
</header>