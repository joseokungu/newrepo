<!-- Content Heading -->

<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>


<!-- Flash Message Section -->
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
<% } %>

<!-- Content -->
<h2>Welcome, <%= accountData.account_firstname %></h2>

<section class="account-container">

    <!-- Link Update account (for everyone) -->
    <p class="management-container"><a class="management-link" href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p>

    <!-- JUST FOR THE CLIENTS -->
    <% if (accountData.account_type=="Client" ) { %>
        <p class="management-container"><a class="management-link" href="/inv/favorites/<%= accountData.account_id %>">Go to Favorites</a></p>
    
    <% } %>

    <!-- EMPLOYEE/ADMIN things-->
    <% if (accountData.account_type=="Employee" || accountData.account_type=="Admin" ) { %>

        <h3>Inventory Management</h3>

        <p class="management-container"><a class="management-link" href="/inv/">Go to Inventory Management</a></p>

    <% } %>

</section>
